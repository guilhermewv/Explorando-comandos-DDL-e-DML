SELECT * FROM pratos;

SELECT nome, preco FROM pratos
WHERE preco BETWEEN 18 AND 25;

SELECT nome FROM pratos
WHERE preco NOT BETWEEN 20 AND 40;

UPDATE pratos
SET preco = 19.50
WHERE nome = 'Hambúrguer Artesanal';

DELETE FROM clientes
WHERE telefone LIKE '%1234%';

CREATE TABLE pratos (
    id SERIAL PRIMARY KEY,
    nome VARCHAR(60) NOT NULL,
    preco DECIMAL(10,2) NOT NULL,
    disponibilidade INT
);

CREATE TABLE clientes (
    id SERIAL PRIMARY KEY,
    nome VARCHAR(60) NOT NULL,
    telefone VARCHAR(20)
);

CREATE TABLE pedidos (
    id SERIAL PRIMARY KEY,
    cliente_id INT,
    prato_id INT,
    quantidade INT
);

INSERT INTO pratos (nome, preco, disponibilidade) VALUES
